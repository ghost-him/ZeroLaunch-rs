  fi

  if [ -n "$UNTRACKED_FILES" ]; then
    echo "$UNTRACKED_FILES" | sed 's/^/  â€¢ æ–°æ–‡ä»¶æœªæš‚å­˜: /'
  fi

  while true; do
    printf "æ˜¯å¦ç»§ç»­æ‰§è¡Œæäº¤æµç¨‹ï¼Ÿ[y/N]: "
    read -r answer < /dev/tty

    case "$answer" in
